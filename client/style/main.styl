@import './_fonts.styl'
@import "./_mixins.styl"
@import './_frame.styl'
@import "./_animation.styl"

$color-1= mediumslateblue
$gray= #dadada
// frames -

button
	padding 5px 10px
	border: 1px solid $color-1
	color $color-1
	&:not(:last-child)
		margin-right 10px

// - frames

#main-screen
	position relative
	width 100%
	margin-bottom 25px
	border-bottom 5px solid $gray
	padding-bottom 25px
	// useless
	margin-top 50px

	.chart-handlers
		margin-top 25px
		text-align center

.tooltip
	position absolute
	width 200px
	padding 5px
	border 1px solid black
	color $color-1
	background white
	opacity: 0
	display none

.main-spinner
	animateSpin(1s)
	position absolute
	top 20px
	left 20px
	font-size 24px

.svg-col
	padding-right 25px
.control-panel-col
	cfix()
	position: relative

#control-panel
	display flex
	position absolute
	top 0px
	left 0px
	padding 10px
	background: white
	border 1px solid $gray
	width 100%
	.confirm
		color $color-1
	.reject
		color red
	.result-view
		trans()
		&.win
			color: $color-1
		&.lose
			color: red
	.inner
		margin auto

.tick
	fill black
.displnone
	display: none;

#statistic-log
	margin-top 20px

.simple-table
	.table-header
		.row
			margin-bottom 20px
	.table-body
		.row
			padding-bottom 10px
			margin-bottom 10px
			border-bottom 1px solid $gray
