@import "./_mixins.styl"
@import './_frame.styl'
@import "./_animation.styl"

$color-1= mediumslateblue
// frames -

button
	padding 5px 10px
	border: 1px solid $color-1
	color $color-1
	&:not(:last-child)
		margin-right 10px

// - frames

#app-render
	position relative
.d3Render
	position relative
	width 100%
.tooltip
	position absolute
	width 200px
	padding 5px
	border 1px solid black
	color $color-1
	background white
	opacity: 0
	display none

.main-spinner
	animateSpin(1s)
	position absolute
	top 20px
	left 20px
	font-size 24px


#edit-form
	position absolute
	top 0px
	right 30px
	padding 10px
	background: white
	border 1px solid #dadada
	.confirm
		color $color-1
	.reject
		color red
	.result-view
		trans()
		&.win
			color: $color-1
		&.lose
			color: red


.tick
	fill black
.displnone
	display: none;
